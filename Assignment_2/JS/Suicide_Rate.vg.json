{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Suicide Rate of Countries in 2016",
  "width": 500,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "config": {"view": {"stroke": null}},
  "data": {
    "url": "https://raw.githubusercontent.com/PouChonWong/FIT3179/Assignment_2/main/js/map.json",
    "format": {"type": "topojson", "feature": "map_admin_0_countries"}
  },
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/PouChonWong/FIT3179/Assignment_2/main/js/sea.topojson",
        "format": {"type": "topojson", "feature": "sea"}
      },
      "mark": {"type": "geoshape", "fill": "#cbe5fc"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/PouChonWong/FIT3179/Assignment_2/main/js/map.json",
        "format": {"type": "topojson", "feature": "map_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "gray"}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/PouChonWong/FIT3179-HW/Week-10-Homework/data/2016.csv"
            },
            "key": "Country",
            "fields": ["2016"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "2016",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [2, 3, 4, 5, 6, 7],
            "range": [
              "#A52A2A",
              "#FF0000",
              "#FF4500",
              "#FFA500",
              "#FFD700",
              "#ADFF2F",
              "#006400"
            ]
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Score", "type": "quantitative", "title": "2016"}
        ]
      }
    }
  ]
}